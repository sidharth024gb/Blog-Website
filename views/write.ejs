<%- include("partials/header.ejs") %>
<div id="write" class="container my-3 py-2">
  <div class="border-bottom border-white pb-2 d-flex justify-content-between">
    <a href="/write" class="text-reset text-decoration-none fs-4 fw-bold"
      >Your Blogs</a
    >
    <button id="write-blog" class="btn btn-light fw-bold">
      Write <img src="/Images/pen.png" alt="Pen-Featur Icon" />
    </button>
  </div>
  <form
    action="/write/blog"
    method="post"
    enctype="multipart/form-data"
    id="write-form"
    style="display: none"
    class="row g-2 px-md-5"
  >
    <input
      type="file"
      name="image"
      id="image"
      class="opacity-0 col"
      style="height: 1px; width: 1px"
      required
    />
    <label for="image" class="p-0 m-0 position-relative">
      <img
        src="/Images/upload.jpg"
        alt="Blog Image"
        class="w-100 d-block rounded-2"
      />
      <span
        class="position-absolute bottom-0 w-100 d-flex justify-content-center align-items-center"
      >
        <img src="/Images/upload-icon.png" alt="Upload Icon" />
      </span>
    </label>
    <input
      type="text"
      name="title"
      id="title"
      placeholder="Title"
      class="form-control col"
      required
    />
    <textarea
      name="para"
      id="para"
      placeholder="Content"
      class="form-control col"
      required
    ></textarea>
    <div class="col-auto d-flex">
      <button type="submit" class="btn btn-success ms-auto">Create Post</button>
    </div>
  </form>
  <div id="blog-list" class="mt-3 row row-cols-1 gap-2 px-2">
    <% blogs.forEach((blog,index)=>{%>
    <div class="d-flex justify-content-between bg-light p-2 rounded-2">
      <h4 class="text-dark m-0"><%= index+1+". "+blog.title %></h4>
      <div class="text-center">
        <a href="/edit/blog/<%= blog.id %>" class="text-decoration-none me-3">
          <img src="/Images/edit.png" alt="Edit Icon" />
        </a>
        <span onclick="deleteBlog('<%=blog.id%>')">
          <img src="/Images/delete.png" alt="Delete Icon" />
        </span>
      </div>
    </div>
    <%})%>
  </div>
</div>
<%- include("partials/footer.ejs") %>
